{% extends 'base.html.twig' %}

{% block title %}Competitions{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center bg-light mt-5" style="color:#2196f3;padding:20px;border:1px solid #2196f3;">Comp√©tition</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ competition.id }}</td>
            </tr>
            <tr>
                <th>DateStart</th>
                <td>{{ competition.dateStart ? competition.dateStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateEnd</th>
                <td>{{ competition.dateEnd ? competition.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Arme</th>
                <td>{{ competition.arme }}</td>
            </tr>
            <tr>
                <th>Participants</th>
                <td>{{ competition.participants }}</td>
            </tr>
            <tr>
                <th>Blason</th>
                <td>{{ competition.blason }}</td>
            </tr>
            <tr>
                <th>CategorieAge</th>
                <td>{{ competition.categorieAge }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col">
            <a type="button" class="btn btn-primary btn-block" href="{{ path('competitions_index') }}">Retour <i class="fas fa-backward"></i></a>
        </div>
        <div class="col">
            <a type="button" class="btn btn-warning btn-block" href="{{ path('competitions_edit', {'id': competition.id}) }}">Modifier <i class="fas fa-edit"></i></a>
        </div>
        <div class="col">
            {{ include('competitions/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
