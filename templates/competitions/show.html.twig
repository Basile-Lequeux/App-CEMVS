{% extends 'base.html.twig' %}

{% block title %}Competitions{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center bg-light mt-5" style="color:#2196f3;padding:20px;border:1px solid #2196f3;">{{ competition.Name }}</h1>

    <table class="table">
        <tbody>
            <tr>
           <th>Liste des tireurs inscrits</th>
            </tr>
            
            <tr>
            {% for user in competition.users %}

            {% if user.role == 1 %}
            
                <td>{{user.user.prenom}} {{user.user.nom}}</td>

            {% endif %}
            
            </tr>
            {% endfor %}
            
    
        </tbody>

    </table>

    <table class="table">
        <tbody>
            <tr>
                <th>Liste des arbitres inscrits</th>
            </tr>
            
            <tr>
            {% for user in competition.users %}

            {% if user.role == 2 %}
            
                <td>{{user.user.prenom}} {{user.user.nom}}</td>
                
            {% endif %}
                
            </tr>
            {% endfor %}
             <td>    
                    <a type="button" class="btn btn-warning" href="{{ path('add_arbitre', {'id': competition.id}) }}">Ajouter un arbitre <i class="fas fa-edit"></i></a>
                </td>
            
                
    
        </tbody>
    </table>
    <div class="row">
        <div class="col">
            <a type="button" class="btn btn-primary btn-block" href="{{ path('competitions_index') }}">Retour <i class="fas fa-backward"></i></a>
        </div>
      
    
    </div>
</div>
{% endblock %}
