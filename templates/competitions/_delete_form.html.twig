<form method="post" action="{{ path('competitions_delete', {'id': competition.id}) }}" onsubmit="return confirm('Etes vous sûr de vouloir supprimer cette compétition');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ competition.id) }}">
    <button class="btn btn-block btn-danger">Supprimer la compétition</button>
</form>
