{% extends 'base.html.twig' %}

{% block title %}Groupe{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center bg-light mt-5" style="color:#2196f3;padding:20px;border:1px solid #2196f3;">Groupe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>Nom</td>
            </tr>
            <tr>
                <th>{{ groupe.id }}</th>
                <td>{{ groupe.nom }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col">
            <a type="button" class="btn btn-primary btn-block" href="{{ path('groupe_index') }}">Retour <i class="fas fa-backward"></i></a>
        </div>
        <div class="col">
            <a type="button" class="btn btn-warning btn-block" href="{{ path('groupe_edit', {'id': groupe.id}) }}">Modifier <i class="fas fa-edit"></i></a>
        </div>
        <div class="col">
            {{ include('groupe/_delete_form.html.twig') }}
        </div>
    </div>

</div>
{% endblock %}