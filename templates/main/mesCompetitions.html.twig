{% extends 'base.html.twig' %}
{% block title %}Mes Participations aux compétitions terminées{% endblock %}
{% block body %}

{% if competitions != false %}


    <div class="container">
        <h1 class="text-center bg-light mt-5" style="color:#2196f3;padding:20px;border:1px solid #2196f3;">Mes Participations aux compétitions terminées</h1>
        <div class="row">
            {% for competition in competitions %}
                <div class="col-md-4 mt-5">
                    <div class="card">
                        <div class="card-header text-center">
                            La compétition a eu lieu du <br><b><i>{{competition.dateStart|date('d-m-Y H:m')}}</i></b> au <b><i>{{competition.dateEnd|date('d-m-Y H:m')}}</i></b>
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title text-center bg-primary" style="color:#fff;padding:10px;">Competition N°{{competition.id}}</h5>
                            <p class="card-text">Nbre de Partcipants: <b>{{competition.participants}}</b></p>
                            <p class="card-text">Blason conseillé: <b>{{competition.blason}}</b></p>
                           
                             {% if competition.users[0].place %}
                                <a type="button" class="btn btn-info" style="color:#fff;">Vous avez terminé {{competition.users[0].place}}ème sur {{competition.participants}} </a>
                            {% else %}
                                <a type="button" href="{{path('mes_competitions_view',{'id': competition.id})}}" class="btn btn-btn-warning">Inscire mes résultats</a>
                            {% endif %}
                           
                            
                        </div>  
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    
    {% else %}
    <div class="container">
    <h1 class="text-center bg-light mt-5" style="color:#2196f3;padding:20px;border:1px solid #2196f3;">Vous n'avez pas encore participé à une compétition</h1>
    </div>
    {% endif %}
{% endblock %}