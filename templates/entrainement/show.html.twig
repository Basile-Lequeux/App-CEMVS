{% extends 'base.html.twig' %}

{% block title %}Entrainement{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center bg-light mt-5" style="color:#2196f3;padding:20px;border:1px solid #2196f3;">Affiche de l'entrainement NÂ° {{entrainement.id}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entrainement.id }}</td>
            </tr>
            <tr>
                <th>Date Debut</th>
                <td>{{ entrainement.dateStart ? entrainement.dateStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date Fin</th>
                <td>{{ entrainement.dateEnd ? entrainement.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Groupes</th>
                <td>{% for groupe in entrainement.groupes %}<p>{{groupe.nom}}</p>{% endfor %}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col">
            <a type="button" class="btn btn-primary btn-block" href="{{ path('entrainement_index') }}">Retour <i class="fas fa-backward"></i></a>
        </div>
        <div class="col">
            <a type="button" class="btn btn-warning btn-block" href="{{ path('entrainement_edit', {'id': entrainement.id}) }}">Modifier <i class="fas fa-edit"></i></a>
        </div>
        <div class="col">
            {{ include('entrainement/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
