{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<div class="container">
        <h1 class="text-center bg-light mt-5" style="color:#2196f3;padding:20px;border:1px solid #2196f3;">Liste des utilisateurs</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom Utilisateur</th>
                    <th>Role</th>
                    <th>Genre</th>
                    <th>Blason</th>
                    <th>Groupe</th>
                    <th>Arbitre</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{user.username}}</td>
                    <td>{{user.role}}</td>
                    <td>{{user.genre}}</td>
                    <td>{{user.blason}}</td>
                    <td>{{user.groupe.nom}}</td>
                    <td>{{user.zoneArbitre}}</td>
                    
                    <td>
                    <a type="button" class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Pas d'entrainements</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a type="button" class="btn btn-success btn-block" href="{{ path('inscription') }}">CrÃ©er un utilisateur</a>
</div>
{% endblock %}
